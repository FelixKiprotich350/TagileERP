<Page x:Class="TagileERP.UserInterface.Administration.DatabaseManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TagileERP.UserInterface.Administration"
      mc:Ignorable="d" 
  Width="1120" Height="650"
      Title="DatabaseManager">

    <Grid >
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Height="30" VerticalAlignment="Center" Margin="0,10,0,0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <TextBlock Text="Database Management" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="MS Reference Sans Serif" Foreground="Indigo" VerticalAlignment="Center"/>
            </Grid>
            <TabControl Style="{x:Null}" VerticalContentAlignment="Top" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="400" MinWidth="800"  >
                <TabItem  Header="Database Backup" VerticalContentAlignment="Top" HorizontalContentAlignment="Stretch"  >
                     
                </TabItem>
                <TabItem   Header="Databse Restore" >
                  
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Page>
